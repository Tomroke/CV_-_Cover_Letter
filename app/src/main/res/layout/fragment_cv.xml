<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <data>
                <variable
                    name="viewmodel"
                    type="com.example.cvpersonalletter.ui.cv.viewmodel.CVViewModel"
                    />
        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.cv.fragments.CVFragment">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimaryDark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/cv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{viewmodel.cvName}"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/profile_image"
                    app:layout_constraintStart_toEndOf="@+id/profile_image" />


                <TextView
                    android:id="@+id/cv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{viewmodel.cvAddress}"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/cv_name"
                    app:layout_constraintStart_toEndOf="@+id/profile_image" />


                <TextView
                    android:id="@+id/cv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{viewmodel.cvPhone}"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/cv_address"
                    app:layout_constraintStart_toEndOf="@+id/profile_image" />

                <TextView
                    android:id="@+id/cv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{viewmodel.cvEmail}"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/cv_phone"
                    app:layout_constraintStart_toEndOf="@+id/profile_image" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cv_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    tools:listitem="@layout/cv_recylcer_item"
                    app:layout_constraintTop_toBottomOf="@id/profile_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
